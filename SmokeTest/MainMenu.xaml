<Window x:Class="SmokeTest.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmokeTest"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding TheReleases}"/>
        <Button x:Name="BtnReport" Content="Populate Report with Random Status" HorizontalAlignment="Left" Margin="238,70,0,0" VerticalAlignment="Top" Width="378" Click="BtnReport_Click"/>
        <Button x:Name="BtnSections" Content="Populate Report Sections with Random Status" HorizontalAlignment="Left" Margin="238,150,0,0" VerticalAlignment="Top" Width="478" Click="BtnSections_Click"/>
    </Grid>
</Window>
