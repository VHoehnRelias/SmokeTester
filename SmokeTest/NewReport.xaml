<Window x:Class="SmokeTest.NewReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmokeTest"
        mc:Ignorable="d"
        Title="NewReport" Height="450" Width="800">
    <Grid>
        <Label Content="Report Name:" HorizontalAlignment="Left" Margin="122,101,0,0" VerticalAlignment="Top"/>
        <Label Content="File Name:" HorizontalAlignment="Left" Margin="122,186,0,0" VerticalAlignment="Top"/>
        <Label Content="Left Navigation Menu Location: " HorizontalAlignment="Left" Margin="122,252,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="333,101,0,0" TextWrapping="Wrap" Text="{Binding Report_Name}" VerticalAlignment="Top" Width="270"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="333,186,0,0" TextWrapping="Wrap" Text="{Binding File_Name}" VerticalAlignment="Top" Width="270"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="333,255,0,0" TextWrapping="Wrap" Text="{Binding Left_Navigation_Menu_location}" VerticalAlignment="Top" Width="270"/>

    </Grid>
</Window>
